<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>

<h1>Issues</h1>

<%= link_to 'New Issue', new_issue_path %><br /><br />

<table>
  <% @issues.each do |issue| %>
    <tr>
      <td><%= link_to issue.title, issue %></td>
      <td><%= issue.description %></td>
      <td><%= issue.state %></td>
      <td><%= link_to 'Edit', edit_issue_path(issue) %></td>

      <% if policy(Issue).destroy? %>
        <td>
          <%= link_to 'Delete', issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
